APP_NAME="BSS System"
APP_ENV=production
APP_KEY=base64:REPLACE_WITH_REAL_KEY
APP_DEBUG=false
APP_URL=https://your-render-web-service.onrender.com
APP_TIMEZONE=Africa/Kampala

LOG_CHANNEL=stack
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=REPLACE_WITH_AIVEN_HOST
DB_PORT=REPLACE_WITH_AIVEN_PORT
DB_DATABASE=REPLACE_WITH_AIVEN_DATABASE
DB_USERNAME=REPLACE_WITH_AIVEN_USER
DB_PASSWORD=REPLACE_WITH_AIVEN_PASSWORD
DB_PERSISTENT=true
DB_CONNECT_TIMEOUT=5
DB_EMULATE_PREPARES=false

# If you prefer CA path instead of CA content, set MYSQL_ATTR_SSL_CA directly.
# MYSQL_ATTR_SSL_CA=/etc/ssl/certs/ca.pem

# Recommended: paste full CA cert content from Aiven here.
AIVEN_CA_PEM="-----BEGIN CERTIFICATE-----
REPLACE_WITH_AIVEN_CA_CERT
-----END CERTIFICATE-----"

CACHE_STORE=file
SESSION_DRIVER=cookie
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax
QUEUE_CONNECTION=database
AUDIT_QUEUE_ENABLED=false
AUDIT_LOG_GET_REQUESTS=true
FILESYSTEM_DISK=uploads
# Persist uploaded images across redeploys (Render Disk mounted at /var/data)
PERSISTENT_DISK_PATH=/var/data
UPLOADS_ROOT=/var/data/uploads
UPLOADS_URL=${APP_URL}/uploads
PUBLIC_DISK_DRIVER=local
PUBLIC_DISK_ROOT=/var/data/storage-public
PUBLIC_DISK_URL=${APP_URL}/storage

# Permanent profile-picture storage without card (Cloudinary free)
# Get this from Cloudinary Dashboard > API Environment variable
# Example:
# CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>?secure=true
CLOUDINARY_URL=

MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"
